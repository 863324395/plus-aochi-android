<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChatMessageList">
        <!--我的气泡-->
        <attr name="myBubbleBackground" format="reference"/>
        <!--别人的气泡-->
        <attr name="otherBubbleBackground" format="reference"/>
        <!--是否显示头像-->
        <attr name="showUserAvatar" format="boolean"/>
        <!--是否显示名字-->
        <attr name="showName" format="boolean"/>
    </declare-styleable>
    <!--组合按钮-->
    <declare-styleable name="combinationBtn">
        <!--左图-->
        <attr name="leftImage" format="reference"></attr>
        <!--右图-->
        <attr name="rightImage" format="reference"></attr>
        <!--左边文字-->
        <attr name="leftText" format="reference|string"></attr>
        <!--右边文字-->
        <attr name="rightText" format="reference|string"></attr>
        <!--左边文字颜色-->
        <attr name="leftTextColor" format="reference|color"></attr>
        <!--右边文字颜色-->
        <attr name="rightTextColor" format="reference|color"></attr>
        <!--是否显示分割线-->
        <attr name="showLine" format="reference|boolean"></attr>
        <!--分割线左右间距-->
        <attr name="dividerLeftMargin" format="reference|dimension"></attr>
        <attr name="dividerRightMargin" format="reference|dimension"></attr>
    </declare-styleable>
    <!--组合输入框和按钮文字-->
    <declare-styleable name="inputLimitView">
        <!--输入的最大值-->
        <attr name="limitSize" format="reference|integer"></attr>
        <!--输入多少字的时候显示 限制提示-->
        <attr name="showLimitSize" format="reference|integer"></attr>
        <!--输入框的hint提示符-->
        <attr name="hintContent" format="reference|string"></attr>
        <!--编辑框显示的行数，超过就滚动-->
        <attr name="showLines" format="reference|integer"></attr>
    </declare-styleable>

    <!--有加载动画的按钮-->
    <declare-styleable name="loadButton">
        <!--按钮文字-->
        <attr name="text" format="reference|string"></attr>

    </declare-styleable>
    <!--顶部错误提示指示器-->
    <declare-styleable name="topTipView">
        <!--文字-->
        <attr name="tipText" format="reference|string"></attr>

    </declare-styleable>

    <!--IconTextView图标文本控件-->
    <declare-styleable name="IconTextView">
        <!--文字大小-->
        <attr name="itv_textSize" format="dimension|reference"/>
        <!--文字颜色-->
        <attr name="itv_textColor" format="color|reference"/>

        <!--图片与文字间隔-->
        <attr name="itv_gap" format="dimension|reference"/>

        <!--方向
             TOP：上边
             BOTTOM: 下边
             LEFT：左边
             RIGHT：右边
        -->
        <attr name="itv_direction">
            <enum name="TOP" value="0"/>
            <enum name="BOTTOM" value="1"/>
            <enum name="LEFT" value="2"/>
            <enum name="RIGHT" value="3"/>
        </attr>

        <!--图片资源-->
        <attr name="itv_icon" format="reference"/>
        <!--显示的文本-->
        <attr name="itv_text" format="string|reference"/>

        <!--图片宽高,如果不设置宽度和高度的话，默认按照图片的宽度和高度来-->
        <attr name="itv_iconWidth" format="dimension|reference"/>
        <attr name="itv_iconHeight" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="PagerRecyclerView">
        <attr name="triggerOffset" format="float"/>
        <attr name="flingFactor" format="float"/>
        <attr name="singlePageFling" format="boolean"/>
    </declare-styleable>
    <!--有按下效果的Imageview-->
    <declare-styleable name="FilterImageView">
        <attr name="pressColor" format="reference|color"/>
        <attr name="pressShape">
            <enum name="square" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
    </declare-styleable>
    <!-- 可以设置 drawable 大小的 TextView-->
    <declare-styleable name="DrawableSizeTextView">
        <attr name="compoundDrawableWidth" format="dimension"/>
        <attr name="compoundDrawableHeight" format="dimension"/>
    </declare-styleable>

</resources>