<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_dynamic_detail_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_mid"
        android:paddingTop="@dimen/spacing_mid">

        <com.zhiyicx.common.widget.FilterImageView
            android:id="@+id/iv_dynamic_detial_like"
            android:layout_width="@dimen/icon_for_home_bottom"
            android:layout_height="@dimen/icon_for_home_bottom"
            tool:src="@mipmap/home_ico_good_normal"
            />

        <TextView
            android:id="@+id/tv_dynamic_detial_like"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_for_assist_small"
            android:layout_marginTop="@dimen/icon_for_home_bottom_text_margin"
            android:textColor="@color/normal_for_disable_button_text"
            android:textSize="@dimen/size_note_assist"
            android:text="@string/like"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dynamic_detail_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing_mid"
        android:paddingTop="@dimen/spacing_mid">

        <com.zhiyicx.common.widget.FilterImageView
            android:id="@+id/iv_dynamic_detial_comment"
            android:layout_width="@dimen/icon_for_home_bottom"
            android:layout_height="@dimen/icon_for_home_bottom"
            tool:src="@mipmap/home_ico_comment_normal"
            />

        <TextView
            android:id="@+id/tv_dynamic_detial_comment"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_for_assist_small"
            android:layout_marginTop="@dimen/icon_for_home_bottom_text_margin"
            android:textColor="@color/normal_for_disable_button_text"
            android:textSize="@dimen/size_note_assist"
            android:text="@string/comment"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dynamic_detail_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_mid"
        android:paddingTop="@dimen/spacing_mid">

        <com.zhiyicx.common.widget.FilterImageView
            android:id="@+id/iv_dynamic_detail_share"
            android:layout_width="@dimen/icon_for_home_bottom"
            android:layout_height="@dimen/icon_for_home_bottom"
            tool:src="@mipmap/detail_ico_share_normal"
            />

        <TextView
            android:id="@+id/tv_dynamic_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_for_assist_small"
            android:layout_marginTop="@dimen/icon_for_home_bottom_text_margin"
            android:textColor="@color/normal_for_disable_button_text"
            android:textSize="@dimen/size_note_assist"
            android:text="@string/share"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dynamic_detail_more"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <com.zhiyicx.common.widget.FilterImageView
            android:id="@+id/iv_dynamic_detail_more"
            android:layout_width="@dimen/icon_for_home_bottom"
            android:layout_height="@dimen/icon_for_home_bottom"
            android:layout_gravity="center"
            tool:src="@mipmap/home_ico_more"
            />
        <TextView
            android:id="@+id/tv_dynamic_detail_more"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_for_assist_small"
            android:layout_marginTop="@dimen/icon_for_home_bottom_text_margin"
            android:textColor="@color/normal_for_disable_button_text"
            android:textSize="@dimen/size_note_assist"
            android:text="@string/more"
            />
    </LinearLayout>
</LinearLayout>

