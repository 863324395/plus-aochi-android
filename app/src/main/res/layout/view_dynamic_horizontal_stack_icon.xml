<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <!--点赞头像层叠，最多五张-->
        <RelativeLayout
            android:id="@+id/fl_dig_head_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:gravity="center_vertical|left"
            >
            <!--点赞数量-->
            <TextView
                android:id="@+id/tv_dig_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/themeColor"
                tools:text="8人点赞"/>

            <ImageView
                android:id="@+id/iv_dig_head5"
                android:layout_width="@dimen/headpic_for_assist"
                android:layout_height="@dimen/headpic_for_assist"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/tv_dig_count"
                tools:src="@drawable/shape_default_image_circle"
                />

            <ImageView
                android:id="@+id/iv_dig_head4"
                android:layout_width="@dimen/headpic_for_assist"
                android:layout_height="@dimen/headpic_for_assist"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@id/tv_dig_count"
                tools:src="@drawable/shape_default_image_circle"
                />

            <ImageView
                android:id="@+id/iv_dig_head3"
                android:layout_width="@dimen/headpic_for_assist"
                android:layout_height="@dimen/headpic_for_assist"
                android:layout_marginRight="50dp"
                android:layout_toLeftOf="@id/tv_dig_count"
                tools:src="@drawable/shape_default_image_circle"
                />

            <ImageView
                android:id="@+id/iv_dig_head2"
                android:layout_width="@dimen/headpic_for_assist"
                android:layout_height="@dimen/headpic_for_assist"
                android:layout_marginRight="70dp"
                android:layout_toLeftOf="@id/tv_dig_count"
                tools:src="@drawable/shape_default_image_circle"
                />

            <ImageView
                android:id="@+id/iv_dig_head1"
                android:layout_width="@dimen/headpic_for_assist"
                android:layout_height="@dimen/headpic_for_assist"
                android:layout_marginRight="90dp"
                android:layout_toLeftOf="@id/tv_dig_count"
                tools:src="@drawable/shape_default_image_circle"
                />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--发布时间-->
        <TextView
            android:id="@+id/tv_dynamic_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/spacing_normal"
            tools:text="发布于8分钟前"/>

        <TextView
            android:id="@+id/tv_dynamic_viewer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_dynamic_publish_time"
            android:layout_below="@id/tv_dynamic_publish_time"
            tools:text="342人浏览"/>
    </LinearLayout>
</LinearLayout>