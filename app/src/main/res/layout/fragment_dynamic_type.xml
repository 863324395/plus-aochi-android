<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhiyi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:id="@+id/select_dynamic_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="bottom|center"
        android:paddingBottom="@dimen/spacing_huge_60"
        android:orientation="vertical">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom">
            <!--动态文字-->
            <com.zhiyicx.thinksnsplus.widget.IconTextView
                    android:id="@+id/send_words_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_marginRight="@dimen/spacing_big_large"
                    zhiyi:itv_direction="TOP"
                    zhiyi:itv_gap="@dimen/spacing_normal"
                    zhiyi:itv_icon="@mipmap/ico_words"
                    zhiyi:itv_iconHeight="@dimen/send_dynamic_send_button_img"
                    zhiyi:itv_iconWidth="@dimen/send_dynamic_send_button_img"
                    zhiyi:itv_text="@string/send_words_dynamic"
                    zhiyi:itv_textColor="@color/dyanmic_send"
                    zhiyi:itv_textSize="@dimen/size_content_assist"/>
            <!--动态图片-->
            <com.zhiyicx.thinksnsplus.widget.IconTextView
                    android:id="@+id/send_image_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/send_words_dynamic"
                    android:layout_marginLeft="@dimen/spacing_big_large"
                    android:visibility="invisible"
                    zhiyi:itv_direction="TOP"
                    zhiyi:itv_gap="@dimen/spacing_normal"
                    zhiyi:itv_icon="@mipmap/ico_potoablum"
                    zhiyi:itv_iconHeight="@dimen/send_dynamic_send_button_img"
                    zhiyi:itv_iconWidth="@dimen/send_dynamic_send_button_img"
                    zhiyi:itv_text="@string/send_image_dynamic"
                    zhiyi:itv_textColor="@color/dyanmic_send"
                    zhiyi:itv_textSize="@dimen/size_content_assist"/>

            <!--签到-->
            <com.zhiyicx.thinksnsplus.widget.IconTextView
                    android:id="@+id/check_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/send_words_dynamic"
                    android:layout_marginRight="@dimen/spacing_big_large"
                    android:layout_marginTop="@dimen/spacing_big_large"
                    android:visibility="invisible"
                    zhiyi:itv_direction="TOP"
                    zhiyi:itv_gap="@dimen/spacing_normal"
                    zhiyi:itv_icon="@mipmap/ico_attendance"
                    zhiyi:itv_iconHeight="@dimen/send_dynamic_send_button_img"
                    zhiyi:itv_iconWidth="@dimen/send_dynamic_send_button_img"
                    zhiyi:itv_text="@string/check_in"
                    zhiyi:itv_textColor="@color/dyanmic_send"
                    zhiyi:itv_textSize="@dimen/size_content_assist"/>

            <!--提问-->
            <com.zhiyicx.thinksnsplus.widget.IconTextView
                    android:id="@+id/send_words_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/send_words_dynamic"
                    android:layout_toRightOf="@+id/check_in"
                    android:layout_marginLeft="@dimen/spacing_big_large"
                    android:layout_marginTop="@dimen/spacing_big_large"
                    android:visibility="invisible"
                    zhiyi:itv_direction="TOP"
                    zhiyi:itv_gap="@dimen/spacing_normal"
                    zhiyi:itv_icon="@mipmap/ico_question"
                    zhiyi:itv_iconHeight="@dimen/send_dynamic_send_button_img"
                    zhiyi:itv_iconWidth="@dimen/send_dynamic_send_button_img"
                    zhiyi:itv_text="@string/send_question"
                    zhiyi:itv_textColor="@color/dyanmic_send"
                    zhiyi:itv_textSize="@dimen/size_content_assist"/>
        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/im_close_dynamic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/send_dynamic_close_button_img"
        android:layout_gravity="bottom"
        android:scaleType="centerInside"
        android:src="@mipmap/ico_close"/>

</LinearLayout>