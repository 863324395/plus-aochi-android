<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/question_list_type_width"
    android:layout_height="@dimen/question_list_type_height"
    android:elevation="@dimen/button_corner_tiny"
    android:orientation="vertical"
    android:background="@color/bgColor"
    app:cardCornerRadius="@dimen/button_corner_small">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_popup_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
       />
</android.support.v7.widget.CardView>