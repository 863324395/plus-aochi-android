<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/spacing_normal"
    android:paddingLeft="@dimen/spacing_small"
    android:paddingRight="@dimen/spacing_small"
    android:paddingTop="@dimen/spacing_normal"
    tools:context="com.zhiyicx.thinksnsplus.modules.home.HomeActivity">

    <com.zhiyicx.common.widget.FilterImageView
        android:id="@+id/iv_headpic"
        android:layout_width="@dimen/headpic_for_list"
        android:layout_height="@dimen/headpic_for_list"
        tools:src="@mipmap/ic_launcher"/>

    <com.zhiyicx.baseproject.widget.InputLimitView
        android:id="@+id/iv_detail_image"
        android:layout_width="@dimen/rec_image_for_list"
        android:layout_height="@dimen/rec_image_for_list"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:src="@mipmap/ic_launcher">

    </com.zhiyicx.baseproject.widget.InputLimitView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_detail_image"
        android:layout_toRightOf="@id/iv_headpic"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingLeft="@dimen/spacing_normal"
        android:textColor="@color/important_for_content"
        android:textSize="@dimen/size_content_comment"
        tools:text="张三 "/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_toLeftOf="@id/iv_detail_image"
        android:layout_toRightOf="@id/iv_headpic"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="1"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_small"
        android:textColor="@color/normal_for_assist_text"
        android:textSize="@dimen/size_content"
        tools:text="我送第几个 "/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_toLeftOf="@id/iv_detail_image"
        android:layout_toRightOf="@id/iv_headpic"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_small"
        android:textColor="@color/general_for_hint"
        android:textSize="@dimen/size_content_assist"
        tools:text="6分钟前"/>


</RelativeLayout>
