<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhiyicx.baseproject.widget.imageview.FilterImageView
        android:id="@+id/iv_dynamic_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher"/>

    <View
        android:id="@+id/iv_dynamic_img_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shadow_color"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_dynamic_img_paint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:padding="@dimen/__picker_spacing_small"
        android:scaleType="centerCrop"
        android:src="@mipmap/ico_edit_pen"/>

    <TextView
        android:text="@string/remake"
        android:layout_marginTop="@dimen/spacing_normal"
        android:id="@+id/tv_record"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/general_for_loading_more"
        android:textSize="@dimen/size_icon_assist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</FrameLayout>