<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhiyicx.thinksnsplus.modules.q_a.publish.detail.xrichtext.DataImageView
        android:id="@+id/edit_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/image_close"
        android:layout_width="@dimen/iamge_close_height"
        android:layout_height="@dimen/iamge_close_height"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/spacing_large"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_small"
        android:scaleType="fitXY"
        android:src="@mipmap/ico_close"/>

</RelativeLayout>