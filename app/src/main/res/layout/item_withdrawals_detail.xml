<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/withdrawal_detail_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/withdrawals_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:gravity="center"
        android:textColor="@color/general_for_loading_more"
        android:textSize="@dimen/size_icon_assist"
        android:text="今天\n17:12"
        tools:text="今天\n17:12"/>

    <TextView
        android:id="@+id/withdrawals_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:textColor="@color/important_for_content"
        android:textSize="@dimen/size_content"
        android:text="微信 账户提现"
        tools:text="微信 账户提现"/>

    <TextView
        android:id="@+id/withdrawals_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:layout_weight="1"
        android:gravity="right"
        android:text="-780"
        android:textColor="@color/selector_withdrawalstext_color"
        android:textSize="@dimen/size_sub_title"
        tools:text="-780"/>

</LinearLayout>