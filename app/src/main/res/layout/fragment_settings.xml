<com.zhiyicx.baseproject.widget.dragview.DragViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                                       xmlns:tools="http://schemas.android.com/tools"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:background="@color/bgColor">

    <com.zhiyicx.baseproject.widget.dragview.DragScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--认证-->
            <com.zhiyicx.baseproject.widget.button.CombinationButton
                android:id="@+id/bt_set_vertify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/full_button_height"
                android:visibility="gone"
                app:leftText="@string/vertify"
                app:leftTextLeftPadding="@dimen/spacing_mid"
                app:rightImage="@mipmap/ic_arrow_smallgrey"></com.zhiyicx.baseproject.widget.button.CombinationButton>
            <!--修改密码-->
            <com.zhiyicx.baseproject.widget.button.CombinationButton
                android:id="@+id/bt_change_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/full_button_height"
                app:leftText="@string/change_password"
                app:leftTextLeftPadding="@dimen/spacing_mid"
                app:rightImage="@mipmap/ic_arrow_smallgrey"></com.zhiyicx.baseproject.widget.button.CombinationButton>
            <!--清理缓存-->
            <com.zhiyicx.baseproject.widget.button.CombinationButton
                android:id="@+id/bt_clean_cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/full_button_height"
                app:leftText="@string/clean_cache"
                app:leftTextLeftPadding="@dimen/spacing_mid"
                app:rightImage="@mipmap/ic_arrow_smallgrey"></com.zhiyicx.baseproject.widget.button.CombinationButton>
            <!--关于我们-->
            <com.zhiyicx.baseproject.widget.button.CombinationButton
                android:id="@+id/bt_about_us"
                android:layout_width="match_parent"
                android:layout_height="@dimen/full_button_height"
                app:leftText="@string/about_us"
                app:leftTextLeftPadding="@dimen/spacing_mid"
                app:rightImage="@mipmap/ic_arrow_smallgrey"></com.zhiyicx.baseproject.widget.button.CombinationButton>
            <!--退出登录-->
            <com.zhiyicx.baseproject.widget.button.CombinationButton
                android:id="@+id/bt_login_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/full_button_height"
                app:leftText="@string/login_out"
                app:leftTextColor="@color/themeColor"
                app:leftTextLeftPadding="@dimen/spacing_mid"
                app:rightImage="@mipmap/ic_arrow_smallgrey"
                app:showLine="false"></com.zhiyicx.baseproject.widget.button.CombinationButton>

        </LinearLayout>
    </com.zhiyicx.baseproject.widget.dragview.DragScrollView>
</com.zhiyicx.baseproject.widget.dragview.DragViewGroup>