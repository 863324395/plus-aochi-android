<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/fragment_info_search_leftimg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="leftClick"
            android:paddingLeft="@dimen/spacing_normal"
            android:src="@mipmap/topbar_back_white"
            android:visibility="visible"/>

        <com.zhiyicx.baseproject.widget.edittext.DeleteEditText
            android:id="@+id/fragment_info_search_edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/fragment_info_search_leftimg"
            android:background="@drawable/info_search_bg"
            android:drawableLeft="@mipmap/ico_search"
            android:hint="@string/edit_user_name"
            android:paddingRight="@dimen/spacing_mid"
            android:textColor="@color/important_for_content"
            android:textColorHint="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"/>

        <TextView
            android:id="@+id/fragment_info_search_righttext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:gravity="center"
            android:paddingRight="@dimen/spacing_normal"
            android:text="搜索"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"
            android:visibility="visible"/>


        <View
            style="@style/style_divider_horizontal_light"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_info_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>