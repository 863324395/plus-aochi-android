<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >
    <!--点赞榜-->
    <com.zhiyicx.baseproject.widget.imageview.FilterImageView
        android:id="@+id/iv_headpic"
        android:layout_width="@dimen/spacing_big_large"
        android:layout_height="@dimen/spacing_big_large"
        app:pressShape="circle"
        tools:src="@mipmap/pic_default_portrait1"/>

    <ImageView
        android:id="@+id/iv_verify"
        android:layout_alignBottom="@id/iv_headpic"
        android:layout_alignRight="@id/iv_headpic"
        android:layout_width="@dimen/spacing_normal"
        android:layout_height="@dimen/spacing_normal"
        tools:src="@mipmap/pic_default_portrait1"/>

</RelativeLayout>