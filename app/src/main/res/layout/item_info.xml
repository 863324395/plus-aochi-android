<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroud_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hegiht_95dp"
        android:paddingBottom="@dimen/margin_top_15dp"
        android:paddingLeft="@dimen/padding_left_12dp"
        android:paddingRight="@dimen/padding_right_12dp"
        android:paddingTop="@dimen/margin_top_15dp">
        <!--帖子的item列表-->
        <ImageView
            android:id="@+id/item_topic_pic"
            android:layout_width="@dimen/hegiht_90dp"
            android:layout_height="@dimen/hegiht_65dp"
            android:layout_marginRight="@dimen/margin_9dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_180x130" />
        <!--用户名称-->
        <TextView
            android:id="@+id/item_topic_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_topic_title"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/item_topic_pic"
            android:text="---"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_13sp" />
        <!--帖子内容-->
        <TextView
            android:id="@+id/item_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4dp"
            android:layout_toRightOf="@id/item_topic_pic"
            android:maxLines="2"
            android:text="走在风中，今天阳光，突然好温柔"
            android:textColor="@color/textcolor_333333"
            android:textSize="@dimen/text_16sp" />
        <!--帖子tag:置顶，精选-->
        <TextView
            android:id="@+id/item_topic_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_topic_username"
            android:text="置顶"
            android:visibility="gone" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">

            <TextView
                    android:id="@+id/item_topic_comment_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/post_comment"
                    android:drawablePadding="@dimen/margin_4dp"
                    android:gravity="center_vertical"
                    android:text="111"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_12sp" />

            <TextView
                    android:id="@+id/item_topic_view_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/post_views"
                    android:drawablePadding="@dimen/margin_4dp"
                    android:gravity="center_vertical"
                    android:text="xxx"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_12sp" />
        </LinearLayout>
        <!--帖子被浏览的次数-->


    </RelativeLayout>

    <include
        layout="@layout/divider_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>