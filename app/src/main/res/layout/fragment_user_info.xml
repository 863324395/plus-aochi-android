<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--更换头像-->
    <RelativeLayout
        android:id="@+id/rl_change_head_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfo_head_icon_container_hegiht"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_head_icon"
            android:layout_width="@dimen/headpic_for_list"
            android:layout_height="@dimen/headpic_for_list"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_mid"
            android:layout_marginRight="@dimen/spacing_mid"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_head_icon"
            android:text="@string/change_head_icon"
            android:textColor="@color/important_for_content"
            android:textSize="@dimen/size_sub_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/spacing_mid"
            android:src="@mipmap/login_ico_closeye"/>
    </RelativeLayout>

    <ImageView style="@style/style_divider_horizontal"/>

    <!--修改用户名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_mid"
            android:text="@string/user_name"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"/>

        <com.zhiyicx.baseproject.widget.edittext.DeleteEditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingRight="@dimen/spacing_mid"
            android:textColor="@color/important_for_content"
            android:textSize="@dimen/size_sub_title"/>
    </LinearLayout>
    <!--修改性别-->
    <LinearLayout
        android:id="@+id/ll_sex_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/headpic_for_list"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_mid"
            android:layout_marginRight="@dimen/spacing_mid"
            android:text="@string/sex"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"/>

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/select_sex"
            android:textColor="@color/important_for_content"
            android:textSize="@dimen/size_sub_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_mid"
            android:src="@mipmap/login_ico_closeye"/>
    </LinearLayout>
    <!--修改城市-->
    <LinearLayout
        android:id="@+id/ll_city_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/headpic_for_list"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_mid"
            android:layout_marginRight="@dimen/spacing_mid"
            android:text="@string/city"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"/>

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/select_city"
            android:textColor="@color/important_for_content"
            android:textSize="@dimen/size_sub_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_mid"
            android:src="@mipmap/login_ico_closeye"/>
    </LinearLayout>
    <!--修改简介-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/headpic_for_list"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_mid"
            android:layout_marginRight="@dimen/spacing_mid"
            android:text="@string/introduce"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_introduce"
            android:textColor="@color/important_for_content"
            android:textSize="@dimen/size_content_assist"/>
    </LinearLayout>
</LinearLayout>
