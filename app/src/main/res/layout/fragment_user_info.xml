<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--更换头像-->
    <RelativeLayout
        android:id="@+id/rl_change_head_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfo_head_icon_container_hegiht"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_head_icon"
            android:layout_width="@dimen/headpic_for_list"
            android:layout_height="@dimen/headpic_for_list"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_mid"
            android:layout_marginRight="@dimen/spacing_mid"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_head_icon"
            android:text="@string/change_head_icon"
            android:textColor="@color/important_for_content"
            android:textSize="@dimen/size_sub_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/spacing_mid"
            android:src="@mipmap/ic_arrow_smallgrey"/>
    </RelativeLayout>

    <View style="@style/style_divider_horizontal"/>

    <!--修改用户名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfo_btn_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/headpic_for_list"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_mid"
            android:layout_marginRight="@dimen/spacing_mid"
            android:text="@string/user_name"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"/>

        <com.zhiyicx.baseproject.widget.edittext.DeleteEditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="@string/edit_user_name"
            android:paddingRight="@dimen/spacing_mid"
            android:textColor="@color/important_for_content"
            android:textColorHint="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"/>
    </LinearLayout>

    <include
        layout="@layout/include_horizontal_userinfo_white_bg_divider"></include>
    <!--修改性别-->
    <LinearLayout
        android:id="@+id/ll_sex_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfo_btn_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/headpic_for_list"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_mid"
            android:layout_marginRight="@dimen/spacing_mid"
            android:text="@string/sex"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"/>

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/select_sex"
            android:text=""
            android:textColor="@color/important_for_content"
            android:textColorHint="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_mid"
            android:src="@mipmap/ic_arrow_smallgrey"/>
    </LinearLayout>

    <include
        layout="@layout/include_horizontal_userinfo_white_bg_divider"></include>
    <!--修改城市-->
    <LinearLayout
        android:id="@+id/ll_city_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfo_btn_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/headpic_for_list"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_mid"
            android:layout_marginRight="@dimen/spacing_mid"
            android:text="@string/city"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"/>

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/select_city"
            android:text=""
            android:textColor="@color/important_for_content"
            android:textColorHint="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_mid"
            android:src="@mipmap/ic_arrow_smallgrey"/>
    </LinearLayout>

    <include
        layout="@layout/include_horizontal_userinfo_white_bg_divider"></include>
    <!--修改简介-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/headpic_for_list"
            android:layout_height="@dimen/userinfo_btn_height"
            android:layout_marginLeft="@dimen/spacing_mid"
            android:layout_marginRight="@dimen/spacing_mid"
            android:gravity="center_vertical"
            android:text="@string/introduce"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"/>
        <!--简介编辑框-->
        <com.zhiyicx.thinksnsplus.widget.UserInfoInroduceInputView
            android:id="@+id/et_user_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_mid"
            android:layout_marginRight="@dimen/spacing_mid"
            android:layout_marginBottom="@dimen/spacing_mid"
            app:limitSize="@integer/introduce_input_max_size"
            app:showLimitSize="@integer/show_introduce_input_size"></com.zhiyicx.thinksnsplus.widget.UserInfoInroduceInputView>

    </LinearLayout>
    <!--布局容器-->
    <LinearLayout
        android:id="@+id/view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>
